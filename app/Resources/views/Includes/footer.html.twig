{% if conference != null %}
<div class="footer">
    <div class="row">
        <div class="col-md-3 footer-section">
            <h3><i class="fa fa-file"></i> About WITS</h3>
            <p>
                {{ conference.description }}
            </p>
        </div>
        <div class="col-md-3 footer-section">
            <h3><i class="fa fa-thumbs-up"></i> Follow us on</h3>
            <div class="socials">
                <a href="{{ conference.facebook }}" target="_blank" class="social-footer-icon"><span class="fa fa-facebook-square"></span></a>
                <a href="{{ conference.twitter }}"  target="_blank" class="social-footer-icon"><span class="fa fa-twitter-square"></span></a>
                <a href="{{ conference.linkedin }}" target="_blank" class="social-footer-icon"><span class="fa fa-linkedin-square"></span></a>
            </div>
            <h3>Subscribe</h3>
            <p>
                Subscribe to receive all new about as on your email
            </p>
            <div class="input-group">
                <input type="text" class="form-control" placeholder="Your email"/>
                <div class="input-group-btn">
                    <button class="btn btn-primary"><span class="fa fa-paper-plane"></span></button>
                </div>
            </div>
        </div>
        <div class="col-md-3 footer-section">
            <h3><i class="fa fa-link"></i> Important Links</h3>
        </div>
        <div class="col-md-3 footer-section">
            <h3><i class="fa fa-phone"></i> Contacts</h3>
            <div class="footer-contacts">
                <div class="fc-row">
                    <span class="fa fa-home"></span>
                    {{ conference.address }}
                </div>
                <div class="fc-row">
                    <span class="fa fa-phone"></span>
                    {{ conference.phone }}
                </div>
                <div class="fc-row">
                    <span class="fa fa-envelope"></span>
                    <strong>{{ conference.responsible.lastName }} {{ conference.responsible.firstName }}</strong><br>
                    <a href="mailto:#">{{ conference.mail }}</a>
                </div>
            </div>
        </div>
    </div>
    <hr>
    <div class="row">
        <p>
            Â© 2016 - {{ "now" | date("Y") }} WITS by ENSA de Fes - All Rights Reserved
        </p>
    </div>
</div>
{% endif %}