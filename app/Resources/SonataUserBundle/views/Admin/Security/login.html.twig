{% extends "@SonataUser/wits_admin_base_login.html.twig" %}
{% block content %}
    <div class="login-container">
        <div class="login-box animated fadeInDown">
            <h1 class="text-center login-title">Administration</h1>
            <hr />
            <div class="login-body">
                <div class="login-title"><strong></div>
                <form action="{{ path("sonata_user_admin_security_check") }}" method="post" class="form-horizontal" >
                    {% if error %}
                        <div class="alert alert-error">{{ error|trans({}, 'SonataUserBundle') }}</div>
                    {% endif %}
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                    <div class="form-group">
                        <div class="col-md-12">
                            <label for="username" class="login-title">{{ 'security.login.username'|trans({}, 'FOSUserBundle') }}</label>
                            <input type="text" id="username" name="_username" value="{{ last_username }}" class="form-control" placeholder="{{ 'security.login.username'|trans({}, 'FOSUserBundle') }}"/>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12">
                            <label for="password" class="login-title">{{ 'security.login.password'|trans({}, 'FOSUserBundle') }}</label>
                            <input type="password" id="password" name="_password" class="form-control" placeholder="{{ 'security.login.password'|trans({}, 'FOSUserBundle') }}"/>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12">
                            <label for="remember_me" class="login-title">
                                <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                                <span>{{ 'security.login.remember_me'|trans({}, 'FOSUserBundle') }}</span>
                            </label>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-6">
                            <a href="{{ path('fos_user_resetting_request') }}" class="btn btn-link btn-block">{{ 'forgotten_password'|trans({}, 'SonataUserBundle') }}</a>
                        </div>
                        <div class="col-md-6">
                            <button type="submit" id="_submit" name="_submit" class="btn btn-info btn-block">{{ 'security.login.submit'|trans({}, 'FOSUserBundle') }}</button>
                        </div>
                    </div>
                    <div class="login-or">OR</div>
                    <div class="form-group">
                        <div class="col-md-4">
                            <button class="btn btn-info btn-block btn-twitter"><span class="fa fa-twitter"></span> Twitter</button>
                        </div>
                        <div class="col-md-4">
                            <button class="btn btn-info btn-block btn-facebook"><span class="fa fa-facebook"></span> Facebook</button>
                        </div>
                        <div class="col-md-4">
                            <button class="btn btn-info btn-block btn-google"><span class="fa fa-google-plus"></span> Google</button>
                        </div>
                    </div>
                </form>
            </div>
            <div class="login-footer">
                <div class="pull-left">
                    &copy; {{ "now" | date("Y") }}
                </div>
                <div class="pull-right">
                    <a href="#">About</a> |
                    <a href="#">Privacy</a> |
                    <a href="#">Contact Us</a>
                </div>
            </div>
        </div>
    </div>

{% endblock content %}
